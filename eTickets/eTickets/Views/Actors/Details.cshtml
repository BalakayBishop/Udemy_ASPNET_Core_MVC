@model ActorModel

@{
    ViewData["Title"] = "Actor Details";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Details for @Model.FullName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">

                    <div class="form-group text-center">
                        <img id="ProfilePicturePreview" class="rounded-circle" style="width: 150px;" />
                    </div>

                    <div class="form-group">
                        <label asp-for="ProfilePicURL" class="control-label"></label>
                        <input asp-for="ProfilePicURL" class="form-control" id="ProfilePictureInput" readonly />
                        <span asp-validation-for="ProfilePicURL" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="FullName" class="control-label"></label>
                        <input asp-for="FullName" class="form-control" readonly />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Biography" class="control-label"></label>
                        <input asp-for="Biography" class="form-control" type="text" readonly />
                        <span asp-validation-for="Biography" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <a class="btn btn-outline-success float-right" asp-action="Edit" asp-route-id="@Model.Actor_ID">Edit</a>
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>

            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            let img = $('#ProfilePicturePreview');
            img.attr({ "src": $("#ProfilePictureInput").val() });
        })
    </script>
}
